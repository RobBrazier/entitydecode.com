---
import About from "../components/About.svelte";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="EntityDecode is a tool to change any escaped characters into their proper characters"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>EntityDecode</title>
    <script
      is:inline
      defer
      src="https://st.r0b.dev/script.js"
      data-website-id="9fce6c8c-d6fe-415d-bfcb-b33a390229c0"
      data-domains="entitydecode.com"></script>
  </head>
  <body class="flex flex-col w-full max-w-screen-xl m-auto gap-4 p-4">
    <header class="space-y-4 flex flex-col gap-4">
      <h1 class="text-4xl font-bold text-center">
        Entity<span class="font-light">Decode</span>
      </h1>
      <About client:idle />
    </header>
    <main>
      <slot />
    </main>
    <footer class="text-sm text-center">
      <p>
        Source Code:
        <a class="link" href="https://github.com/RobBrazier/entitydecode.com">
          GitHub
        </a>
      </p>
    </footer>
  </body>
</html>
