---
import About from "../components/About.jsx";
import "../styles/app.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="EntityDecode is a tool to change any escaped characters into their proper characters"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>EntityDecode</title>
    <style>
      [x-cloak] {
        display: none !important;
      }
    </style>
  </head>
  <body class="flex flex-col w-full max-w-7xl m-auto gap-4 p-4 bg-background text-foreground">
    <header class="space-y-4 flex flex-col gap-4" x-data="{open: false}">
      <h1 class="text-4xl font-bold text-center">
        Entity<span class="font-light">Decode</span>
      </h1>
      <About client:idle />
    </header>
    <main>
      <slot />
    </main>
    <footer class="text-sm text-center">
      <p>
        Source Code:
        <a class="text-primary hover:underline font-medium" href="https://codeberg.org/robbrazier/entitydecode.com">
          Codeberg
        </a>
      </p>
    </footer>
  </body>
</html>
